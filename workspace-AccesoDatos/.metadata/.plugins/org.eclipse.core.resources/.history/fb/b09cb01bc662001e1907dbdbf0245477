package ejercicio4.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import ejercicio4.modelo.LineaPedido;

public class LineaPedidoDao {

	public void insertarLineaPedido(Connection conn, LineaPedido linP) throws SQLException {

		PreparedStatement stmt = null;
		

		try {
			conn.setAutoCommit(false);
			stmt = conn.prepareStatement("insert into pedidos values (?,?,?,?)");
			stmt.setLong(1, linP.getIdPedido());
			stmt.setInt(2, linP.getNumLinea());
			stmt.setString(3, linP.getArticulo());
			stmt.setBigDecimal(4, linP.getPrecio());
			stmt.execute();
			conn.commit();
			
			

		} finally {
			try {
				conn.close();
			} catch (Exception e) {

			}

		}

	}

}
